{
  "name": "exciton-binding-energy-elliott-model",
  "version": "1.0.0",
  "description": "Exciton Binding Energy Calculation using Elliott Model - F-sum Rule Fitting",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:all": "npm run install:deps && concurrently -k -s first \"npm run dev:backend\" \"npm run dev:frontend:wait\"",
    "dev:backend": "python3 api.py",
    "dev:frontend": "vite",
    "dev:frontend:wait": "node wait-for-backend.cjs && vite",
    "install:deps": "./install-deps.sh",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "plotly.js": "^3.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-plotly.js": "^2.6.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "vite": "^5.0.8"
  }
}